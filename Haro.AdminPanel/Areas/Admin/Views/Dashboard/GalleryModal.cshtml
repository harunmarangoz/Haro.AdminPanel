@model GalleryModel

<div class="modal" id="galleryModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.Name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ajax-form asp-action="AddGalleryImage">
                    <input asp-for="EntryId" type="hidden"/>
                    <input asp-for="ColumnId" type="hidden"/>
                    <form-input for="ImageFiles" type="MultipleImage"/>
                </ajax-form>
                <div class="row mt-4">
                    @foreach (var item in Model.GalleryImages)
                    {
                        <div class="col-lg-4 mt-3 h-50" id="galleryImage@(item.Id)">
                            <img class="img-fluid" src="@item.Image"/>
                            <button type="button" onclick="deleteGalleryImage(@Model.Column.Id,@item.Id)" class="btn btn-danger btn-block mt-3">Sil</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>