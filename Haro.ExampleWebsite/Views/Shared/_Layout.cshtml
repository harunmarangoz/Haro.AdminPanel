@using Haro.ExampleWebsite.Resources
@using Haro.AdminPanel.Common
@using Haro.AdminPanel.Utilities.Extensions
@using System.Globalization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Haro.ExampleWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Haro.ExampleWebsite</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a href="@Url.Action("Privacy", "Home").LocalizeUrl()" class="nav-link text-dark">@Resources.Home</a>
                    </li>
                    <li class="nav-item mr-5">
                        <a href="@Url.Action("Privacy", "Home").LocalizeUrl()" class="nav-link text-dark">@Resources.Privacy</a>
                    </li>
                    @foreach (var item in App.Common.Languages)
                    {
                        <li class="nav-item">
                            <a href="/@(CultureInfo.DefaultThreadCurrentCulture?.Name == item.Code ? "" : item.Code)" class="nav-link text-@(item.Code == CultureInfo.CurrentCulture.Name ? "dark" : "grey")">@item.DisplayValue</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()

        <b></b>
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - Haro.ExampleWebsite - <a asp-area="" asp-controller="Home" asp-action="Privacy">@Resources.Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>